{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "ES5",
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "outDir": "./lib",
    "baseUrl": ".",
    "paths": {
      "*": [ "node_modules/*", "src/*" ]
    }
  },
  "include": [ "./src/**/*" ],
  "exclude": [ "node_modules", "**/*.spec.ts" ]
}